<?xml version="1.0" encoding="utf-8"?><!--我的轻淘页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <!--顶部区域结束-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--上部分-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorBackground"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frag_personal_tv_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:clickable="true"

                    android:textColor="@color/colorFont" />


                <ImageView
                    android:id="@+id/frag_personal_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
                <!--上面这个地方放一个设置的图标-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/frag_personal_topbg"
                android:gravity="center"
                android:orientation="vertical">
                <!--头像显示-->
                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/frag_personal_iv_head"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/yy20161127021425"
                        android:gravity="center"
                        android:text="@string/app_name" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/yy20161127021425"
                        android:gravity="center"
                        android:text="@string/app_name" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/yy20161127021425"
                        android:gravity="center"
                        android:text="@string/app_name" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/frag_personal_rl_show_dingdan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的订单"
                    android:textColor="#bf000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看全部订单"
                    android:textColor="#C6C3BF"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/frag_personal_btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTransparency"
                    android:drawableTop="@mipmap/ceshi1"
                    android:gravity="center"
                    android:text="待付款" />

                <Button
                    android:id="@+id/frag_personal_btn_daifahuo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTransparency"
                    android:drawableTop="@mipmap/ceshi1"
                    android:gravity="center"
                    android:text="待发货" />

                <Button
                    android:id="@+id/frag_personal_btn_daishouhuo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTransparency"
                    android:drawableTop="@mipmap/ceshi1"

                    android:gravity="center"
                    android:text="待收货" />

                <Button
                    android:id="@+id/frag_home_personal_daipingjia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTransparency"
                    android:clickable="true"
                    android:drawableTop="@mipmap/ceshi1"

                    android:text="待评价" />

                <Button
                    android:id="@+id/frag_personal_btn_tuikuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorTransparency"
                    android:drawableTop="@mipmap/ceshi1"

                    android:gravity="center"
                    android:text="退款/售后" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <!--下部分控件-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="我的世界"
                android:textColor="#bf000000"
                android:textSize="15sp" />


            <!--分界线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <!--中间部分控件-->
            <GridView
                android:id="@+id/myWorld_GridView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:horizontalSpacing="2dp"
                android:listSelector="@null"
                android:numColumns="3"
                android:verticalSpacing="3dp"

                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:text="你可能喜欢 "
                android:textColor="#bf000000"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <!--底部部分控件-->

            <GridView
                android:id="@+id/maybeLovegridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="2dp"
                android:listSelector="@null"
                android:numColumns="4"
                android:stretchMode="columnWidth"

                android:verticalSpacing="3dp" />


            <!--水平的滑动的控件  类似app下载时候 截图的展示  -->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyclerview_horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ff0"
                android:scrollbars="none">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>